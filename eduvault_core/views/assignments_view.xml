<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="act_open_op_assignment_view">
            <field name="name">Assignments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.assignments</field>
            <field name="view_mode">list,form</field>
        </record>
        
<!-- List View -->
        <record id="view_op_assignments_tree" model="ir.ui.view">
            <field name="name">op.assignments.list</field>
            <field name="model">op.assignments</field>
            <field name="arch" type="xml">
                <list string="Assignments">
                    <field name="name"/>
                    <field name="end_date"/>
                    <field name="subject_id"/>
                    <field name="course_id"/>
                </list>
            </field>
        </record>

<!-- Form View -->
        <record id="view_op_assignments_form" model="ir.ui.view">
            <field name="name">op.assignments.form</field>
            <field name="model">op.assignments</field>
            <field name="arch" type="xml">
                <form string="Assignments">
                    <sheet>
                        <group name="assignment">
                            <separator string="ASSIGNMENT INFORMATION" colspan="4"/>
                                <group>
                                    <field name="course_id"/>
                                    <field name="faculty_id"/>
                                </group>
                                <group>
                                    <field name="name"/>
                                </group>
                            <separator string="STANDARD AND DIVISION" colspan="4"/>
                                <group>
                                    <field name="batch_id"/>
                                </group>
                                <group>
                                    <field name="subject_id"/>
                                </group>
                            <separator string="DATES" colspan="4"/>
                                <group>
                                    <field name="start_date"/>
                                </group>
                                <group>
                                    <field name="end_date"/>
                                </group>
                            <separator string="UPLOAD/DOWNLOAD ATTACHMENTS" colspan="4"/>
                                <group>
                                    <field name="attachment"/>
                                </group>
                            <separator string="SUBMISSION DETAILS" colspan="4"/>
                                <group>
                                    <field name="total_assignment"/>
                                    <field name="total_submitted"/>
                                    <field name="total_not_submitted"/>
                                </group>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
